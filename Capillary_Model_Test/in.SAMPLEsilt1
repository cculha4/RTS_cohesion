#Particle insertion by Thien Phan

atom_style	sphere
atom_modify	map array
boundary	f f f
newton		off
echo		both
#hard_particles yes

communicate	single vel yes
#processors	2 2 2

units		si

region		reg block -0.1 0.9 -0.1 0.9 -0.1 0.9 units box                     # simulation region

create_box	3 reg

neighbor	0.0005 bin
neigh_modify	delay 0


#----------------------------------------Material properties required for new pair styles---------------------------------------

fix 	m1 all property/global youngsModulus peratomtype 6.7e6 6.7e6  6.7e6          #E=10GPa units Pa
fix 	m2 all property/global poissonsRatio peratomtype 0.15 0.15 0.15									# not effect much
fix 	m3 all property/global coefficientRestitution peratomtypepair 3				0.9 0.9 0.9		0.9 0.9 0.9		0.9 0.9 0.9		# not effect much
fix 	m4 all property/global coefficientFriction peratomtypepair 3				0.57 0.57 0.0		0.57 0.57 0.0		0.0 0.0 0.0		# sliding friction
fix     m5 all property/global minSeparationDistanceRatio scalar 1.01
fix     m6 all property/global maxSeparationDistanceRatio scalar 1.1
fix     m7 all property/global surfaceLiquidContentInitial scalar 0.01
fix     m8 all property/global surfaceTension scalar 0.071
fix     m9 all property/global fluidViscosity scalar .001
fix     m10 all property/global contactAngle peratomtype 47 47 47 


pair_style 	gran model hertz tangential history cohesion easo/capillary/viscous 

pair_coeff	* *

#---------------------------------------------------------------------------------------------------------------------------------

variable dt equal 1e-5
timestep  ${dt}

fix			gravi all gravity 9.81 vector 0.0 -0.1 0.0

fix 	ts_check all check/timestep/gran 10000 0.2 0.2
 
# --------------------------------------- Insert mesh------------------------------------------------------------------------------

fix z1wall all mesh/surface/stress file mesh/z1.stl type 3  reference_point 0.0 0.0 0.0
fix z2wall all mesh/surface/stress file mesh/z2.stl type 3  reference_point 0.0 0.0 0.02
fix y1wall all mesh/surface/stress file mesh/y1.stl type 3 reference_point 0.0 0.0 0.0
fix y2wall all mesh/surface/stress file mesh/y2.stl type 3 reference_point 0.0 0.15 0.0
fix y2samplewall all mesh/surface/stress file mesh/y2sample.stl type 3 reference_point 0.0 0.048 0.0
fix x1wall all mesh/surface/stress file mesh/x1.stl type 3 reference_point 0.0 0.0 0.0
fix x2wall all mesh/surface/stress file mesh/x2.stl type 3 reference_point 0.0 0.3 0.0
fix x2samplewall all mesh/surface/stress file mesh/x2sample.stl type 3 reference_point 0.06 0.0 0.0

fix wall all wall/gran model hertz tangential history mesh n_meshes 7 meshes z1wall z2wall y1wall y2wall x1wall x2wall x2samplewall

#-----------------------Distributions for insertion-------------------------------------------------------

fix pts1 all particletemplate/sphere 1111151 atom_type 1 density constant 2500 volume_limit 1.00E-30 radius constant 0.0008

fix pts2 all particletemplate/sphere 1111289 atom_type 1 density constant 2500 volume_limit 1.00E-30 radius constant 0.0008

fix pts3 all particletemplate/sphere 1111841 atom_type 1 density constant 2500 volume_limit 1.00E-30 radius constant 0.0008


fix		pdd1 all particledistribution/discrete 17903 3 pts1 0.4 pts2 0.3 pts3 0.3

#---------------region for insertion and insertion ------------------------------------------------------------------------#

region		bc block -0.0 0.06 -0.0 0.15 0.0 0.06 units box

group		nve_group region reg

fix		ins nve_group insert/pack seed 32452843 distributiontemplate pdd1 insert_every once overlapcheck yes all_in yes region bc volumefraction_region 0.2 ntry_mc 10000


# --------------- output settings, include total thermal energy -----------------------------------------#

thermo_style	custom step atoms ke dt vol
thermo			1000

#--------------------------------insert the first particles and dump--------------------------------------#

run		1
unfix		ins


# ------- Apply nve integration to all particles that are inserted as single particles-------------------#


fix         integr all nve/limit radius_ratio 0.001


# --------------- output settings, include total thermal energy -----------------------------------------#

dump		dmp1 all custom 1 silt1/post2/dump*.liggghts id type type x y z ix iy iz vx vy vz fx fy fz omegax omegay omegaz radius
run 1
undump	dmp1

dump		dmp1 all custom 1000 silt1/post2/dump*.liggghts id type type x y z ix iy iz vx vy vz fx fy fz omegax omegay omegaz radius


#-----------Deposition--------------------------------------------------------------------------------------#


run		200000

#---- define region of interest to delete particles outside
region	del_region block 0.0 0.06 0.0 0.048 0.0 0.06 side out

#---- remove atoms in region outside
delete_atoms region del_region



run		30000

write_restart restart.packing

